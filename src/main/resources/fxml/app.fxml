<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="hamburg.remme.tinygit.ui.AppController"
           styleClass="app">
  <VBox>
    <!--<fx:include source="menu.fxml" useSystemMenuBar="true"/>-->
    <fx:include source="menu.fxml"/>
    <fx:include source="tools.fxml"/>
    <StackPane VBox.vgrow="ALWAYS" styleClass="app-body">
      <BorderPane>
        <center>
          <fx:include source="log.fxml"/>
        </center>
        <bottom>
          <fx:include source="stats.fxml"/>
        </bottom>
      </BorderPane>
      <StackPane xmlns="http://javafx.com/javafx"
                 xmlns:fx="http://javafx.com/fxml"
                 visible="${controller.empty}"
                 styleClass="app-overlay">
        <Label text="%info.empty"/>
      </StackPane>
    </StackPane>
  </VBox>
  <fx:include source="progress_overlay.fxml"/>
</StackPane>
