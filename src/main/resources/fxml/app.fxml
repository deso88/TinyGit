<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="hamburg.remme.tinygit.ui.AppController"
      styleClass="app">
  <!--<fx:include source="menu.fxml" useSystemMenuBar="true"/>-->
  <fx:include source="menu.fxml"/>
  <StackPane VBox.vgrow="ALWAYS" styleClass="app-body">
    <BorderPane>
      <center>
        <fx:include source="log.fxml"/>
      </center>
      <left>
        <fx:include source="stats.fxml"/>
      </left>
    </BorderPane>
    <fx:include source="empty.fxml" visible="${controller.empty}"/>
  </StackPane>
</VBox>
