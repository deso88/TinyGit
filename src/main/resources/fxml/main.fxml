<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import hamburg.remme.tinygit.ui.CommitCellFactory?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="hamburg.remme.tinygit.ui.MainController">
  <VBox>
    <fx:include source="menu.fxml" useSystemMenuBar="true"/>
    <StackPane VBox.vgrow="ALWAYS">
      <ListView fx:id="commitListView">
        <cellFactory>
          <CommitCellFactory/>
        </cellFactory>
      </ListView>
      <fx:include source="no_repository.fxml" visible="${controller.noRepository}"/>
    </StackPane>
  </VBox>
</StackPane>
